<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkService"
        xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
        xmlns:view="clr-namespace:NetworkService.Views"
        xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        xmlns:dvm="clr-namespace:NetworkService.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewModel:NetworkEntitiesViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="700" Width="900"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#1B1B1B">

    <WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="30"
                  CornerRadius="0"
                  UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.InputBindings>
        <KeyBinding Key="D1" Modifiers="Control"
                    Command="{Binding NavCommand}" CommandParameter="NetworkEntities"/>
        <KeyBinding Key="D2" Modifiers="Control"
                    Command="{Binding NavCommand}" CommandParameter="NetworkDisplay"/>
        <KeyBinding Key="D3" Modifiers="Control"
                    Command="{Binding NavCommand}" CommandParameter="MeasurementGraph"/>
        <KeyBinding Key="D4" Modifiers="Control" Command="{Binding NavCommand}" CommandParameter="Exit"/>
        <KeyBinding Modifiers="Control" Key="A" Command="{Binding CurrentViewModel.ToggleAddSectionCommand}"/>
        <KeyBinding Modifiers="Control" Key="M" Command="{Binding CurrentViewModel.ToggleManagementSectionCommand}"/>
        <KeyBinding Modifiers="Control" Key="T" Command="{Binding CurrentViewModel.ToggleTerminalSectionCommand}"/>
    </Window.InputBindings>

    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:NetworkEntitiesViewModel}">
            <view:NetworkEntitiesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:NetworkDisplayViewModel}">
            <view:NetworkDisplayView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:MeasurementGraphViewModel}">
            <view:MeasurementGraphView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="1" Margin="5" HorizontalAlignment="Center">

            <Menu.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF2D2D30" Offset="0"/>
                    <GradientStop Color="#FF3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>

            <MenuItem Header="_NetworkEntities" Command="{Binding NavCommand}" CommandParameter="NetworkEntities"
              FontSize="16" FontWeight="SemiBold" Foreground="White" Padding="10,5">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>

            <MenuItem Header="_NetworkDisplay" Command="{Binding NavCommand}" CommandParameter="NetworkDisplay"
              FontSize="16" FontWeight="SemiBold" Foreground="White" Padding="10,5">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>

            <MenuItem Header="_MeasurementGraph" Command="{Binding NavCommand}" CommandParameter="MeasurementGraph"
              FontSize="16" FontWeight="SemiBold" Foreground="White" Padding="10,5">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>

            <MenuItem Header="Exit" Command="{Binding ExitCommand}">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="Background" Value="#E51400"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1F1F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>


        </Menu>

        <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}"/>
        
    </Grid>

    <notifications:NotificationArea
    x:Name="WindowNotificationArea"
    Panel.ZIndex="1000"
    MaxItems="3"
    Position="TopRight"
    HorizontalAlignment="Right"
    VerticalAlignment="Top"
    Margin="10"
    Width="300"
    Height="Auto"/>
    </Grid>
</Window>
